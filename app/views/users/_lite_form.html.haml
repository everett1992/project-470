= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :email
    = f.text_field :email, :placeholder => 'Enter your email.'
  .field
    = f.label :password
    = f.password_field :password, :placeholder => 'Choose a password.'
  .field
    = f.label :password_confirmation
    = f.password_field :password_confirmation, :placeholder => 'Confirm it.'
  .actions
    = f.submit 'Save', :class => 'btn-success btn-large'
