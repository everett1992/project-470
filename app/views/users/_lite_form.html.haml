= form_for @user, :html => {:class => "form-signup"} do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg
  = f.text_field :email, :placeholder => 'Enter your email.'
  = f.password_field :password, :placeholder => 'Choose a password.'
  = f.password_field :password_confirmation, :placeholder => 'Confirm it.'
  = f.submit 'Sign up!', :class => 'btn btn-large btn-block btn-success'
