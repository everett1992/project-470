= form_for @dwelling do |f|
  - if @dwelling.errors.any?
    #error_explanation
      %h2= "#{pluralize(@dwelling.errors.count, "error")} prohibited this dwelling from being saved:"
      %ul
        - @dwelling.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
