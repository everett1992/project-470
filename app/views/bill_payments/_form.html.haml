= form_for [@bill, @bill_payment] do |f|
  - if @bill_payment.errors.any?
    #error_explanation
      %h2= "#{pluralize(@bill_payment.errors.count, "error")} prohibited this bill payment from being saved:"
      %ul
        - @bill_payment.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :amount
    = f.text_field :amount
  .field
    = f.label :method
    = f.text_field :method
  .actions
    = f.submit 'Save'
