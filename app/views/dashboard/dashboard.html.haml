.span2
.span3
  .well
    %h3= link_to "Roomates", dwelling_path(current_dwelling)
    %ul.nav.nav-pills.nav-stacked
      - @roommates.each do |roomate|
        %li
          = link_to roomate.name, user_path(roomate)
    
  .well
    %h3= link_to 'Upcoming Bills', bills_path
    %ul.nav.nav-pills.nav-stacked
      - @upcoming_bills.each do |bill|
        %li
          %a{href: bill_path(bill)}
            #{bill.name} 
            %span.muted.pull-right
              #{distance_of_time_in_words_to_now bill.date_due} from now

  .well
    %h3
      = link_to 'Upcoming Events', events_path
    %ul.nav.nav-pills.nav-stacked
      - @upcoming_events.each do |event|
        %li
          %a{href: event_path(event)}
            #{event.title} 
            %span.muted.pull-right
              - if event.date < Time.now
                #{distance_of_time_in_words_to_now event.date} ago
              - else
                #{distance_of_time_in_words_to_now event.date} from now

  .well
