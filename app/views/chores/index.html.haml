%h1 DONT BE LAZY!


/ 
  %table
  %tr
    %th Name
    %th Description
    %th Owner
    %th Assigned user
    %th Dwelling
    %th
    %th
    %th
/
  - @chores.each do |chore|
    %tr
      %td= chore.name
      %td= chore.description
      %td= chore.owner.name
      %td= chore.assigned_user.name if chore.assigned_user
      %td= chore.dwelling_id
      %td= link_to 'Show', chore
      %td= link_to 'Edit', edit_chore_path(chore)
      %td= link_to 'Destroy', chore, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

%ul.chores
  - @chores.each do |chore|
    %li
      %a#view-chore{:href => chore_url(chore)}
      .chore-obligate
        - if current_user == chore.owner
          .delete-chore
            %a=link_to 'X', chore, :method => :delete, :data => { :confirm => 'Are you sure?'}
        = chore.assigned_user.first_name + " " + chore.assigned_user.first_name.first if chore.assigned_user
      .chore-title
        = chore.name
      .chore-description
        = chore.description
      - if current_user == chore.owner
        .edit-chore
          = link_to [:edit, chore] do
            %i.icon-edit        
      .chore-owner
        = "-" + chore.owner.first_name


= link_to 'New Chore', new_chore_path
