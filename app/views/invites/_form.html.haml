= form_for [@invite.dwelling, @invite] do |f|
  - if @invite.errors.any?
    #error_explanation
      %h2= "#{pluralize(@invite.errors.count, "error")} prohibited this invite from being saved:"
      %ul
        - @invite.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.hidden_field :dwelling_id
  .actions
    = f.submit 'Save'
