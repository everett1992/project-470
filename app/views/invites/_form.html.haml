= form_for @invite do |f|
  - if @invite.errors.any?
    #error_explanation
      %h2= "#{pluralize(@invite.errors.count, "error")} prohibited this invite from being saved:"
      %ul
        - @invite.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :dwelling
    = f.text_field :dwelling_id
  .field
    = f.label :invitee
    = f.text_field :invitee_id
  .field
    = f.label :invitee_email
    = f.text_field :invitee_email
  .actions
    = f.submit 'Save'
