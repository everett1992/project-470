= form_for dwelling_bills_path(@bill.dwelling) do |f|
  - if @bill.errors.any?
    #error_explanation
      %h2= "#{pluralize(@bill.errors.count, "error")} prohibited this bill from being saved:"
      %ul
        - @bill.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :owed_to
    = f.text_field :owed_to
  .field
    = f.label :amount
    = f.text_field :amount
  .field
    = f.label :date_due
    = f.date_select :date_due
  .field
    = f.label :status
    = f.text_field :status
  .actions
    = f.submit 'Save'
