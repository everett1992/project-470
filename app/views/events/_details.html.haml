.event-container
  %h4
    = event.name
    %small - #{event.date.strftime('%D')}
  .event-details
    %span.description
      %pre= event.description
    %span.poster
      %p= event.user.name
    .show-event-options
      .contents
        = link_to 'Show', event_path(event), class: 'btn btn-success btn-small'
        = link_to 'Edit', edit_event_path(event), class: 'btn btn-warning btn-small'
        = link_to 'Destroy', event_path(event), :method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'btn btn-danger btn-small'
%br
